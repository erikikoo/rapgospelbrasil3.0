<div class="pag-login">
	<div class="painel-login">		
		<h2>Login</h2>
		<%= devise_error_messages! %>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		  <div class="form-inputs">
		    <%= f.input :email, required: false, autofocus: true, label: 'Email' %>
		    <%= f.input :password, required: false, label: 'Senha' %>
		    <%= f.input :remember_me, label: 'Lembrar-me',as: :boolean if devise_mapping.rememberable? %>
		  </div>

		  <div class="form-actions">
		    <%= f.button :submit, "Entrar" %>
		  </div>
		<% end %>

		<%= render "devise/shared/links" %>
		<%= link_to 'Cancelar', root_path %>
	</div>
</div>