<% content_for (:title) do %>
  <%= @notice.titulo %> - RapGospelBrasil
<% end %>
<div class="pag-show">
    <h3><%= @notice.titulo %></h3>


  	<% if @notice.present? %>        
          <span class="imagem-noticia-show">
              <%= image_tag(@notice.logo.url(:medium)) %>
          </span> 
      <% end %>    
  	<span class="text-justify"><%= raw(@notice.noticia) %></span>
     <br>
  <p>
  
    <% if @profile == 'admin'  %>
      <%= link_to 'Editar', "/edit_noticia/#{@notice.id}/admin", class: 'btn btn-default', remote: true %> |
      <%= link_to 'Voltar', '/noticias/admin', class: 'btn btn-default', remote: true %>
    <% else %>
      <%= link_to 'Voltar', '/noticias', class: 'btn btn-default' %>
    <% end %>
    <span class="criado-em">
     	<strong>Data de criação : </strong><%= @notice.created_at.strftime('%d/%m/%Y') %>
    </span>
  </p>
</div>
